---
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Experience from "../components/Experience.astro";
import Hero from "../components/Hero.astro";
import Navbar from "../components/Navbar.astro";
import Projects from "../components/Projects.astro";
import Layout from "../layouts/Layout.astro";

import { getI18N } from "../i18n/";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout title={i18n.SEO_TITLE} description={i18n.SEO_DESCRIPTION}>
  <Navbar
    NAV_ELEMENT_1={i18n.NAV_ELEMENT_1}
    NAV_ELEMENT_2={i18n.NAV_ELEMENT_2}
    NAV_ELEMENT_3={i18n.NAV_ELEMENT_3}
    NAV_ELEMENT_4={i18n.NAV_ELEMENT_4}
    NAV_ELEMENT_5={i18n.NAV_ELEMENT_5}
  />
  <Hero
    greeting={i18n.HERO_GREETING}
    position={i18n.HERO_POSITION}
    paragraph={i18n.HERO_PARAGRAPH}
    btn_1={i18n.HERO_BUTTON_1}
    btn_2={i18n.HERO_BUTTON_2}
  />
  <Experience title={i18n.EXPERIENCE_SECTION} />
  <Projects title={i18n.PROJECTS_SECTION} />
  <About
    title={i18n.ABOUT_SECTION}
    paragraph_1={i18n.ABOUT_PARAGRAPH_1}
    paragraph_2={i18n.ABOUT_PARAGRAPH_2}
    featured_1={i18n.ABOUT_FEATURED_1}
    featured_2={i18n.ABOUT_FEATURED_2}
    featured_3={i18n.ABOUT_FEATURED_3}
  />
  <Contact
    title={i18n.CONTACT_SECTION}
    featured_1={i18n.CONTACT_FEATURED_1}
    featured_2={i18n.CONTACT_FEATURED_2}
    form_name={i18n.CONTACT_FORM_NAME}
    form_name_placeholder={i18n.CONTACT_FORM_NAME_PLACEHOLDER}
    form_email={i18n.CONTACT_FORM_EMAIL}
    form_message={i18n.CONTACT_FORM_MESSAGE}
    form_message_placeholder={i18n.CONTACT_FORM_MESSAGE_PLACEHOLDER}
    btn={i18n.CONTACT_BUTTON}
  />
</Layout>
