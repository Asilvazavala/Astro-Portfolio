---
interface Props {
  title: string;
  className: string;
  link: string;
}

const { title, className, link } = Astro.props
---
<a 
  href={link}
  target="_blank"
  rel="noopener"
  class={`text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 
  lg:hover:bg-gradient-to-br shadow-lg shadow-purple-500/50 transition lg:hover:shadow-2xl 
  lg:hover:shadow-purple-800/80 dark:shadow-purple-800/80 font-medium rounded-lg text-sm px-5 py-2.5 
  text-center me-2 mb-2 ${className}`}>
  {title}
</a>