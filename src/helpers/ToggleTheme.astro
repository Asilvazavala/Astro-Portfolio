---
import MoonIcon from "../icons/MoonIcon.astro";
import SunIcon from "../icons/SunIcon.astro";
---

<div id="toggleDarkMode">
  <button
    aria-label="Cambiar Modo Claro-Oscuro"
    class="text-black dark:text-white gap-x-2 transition duration-300 dark:opacity-100 flex relative"
  >
    <span class="scale-0 dark:scale-100 transition duration-700">
      <MoonIcon class="lg:size-5 size-6" />
    </span>
    <span class="dark:scale-0 transition duration-700 absolute">
      <SunIcon class="lg:size-5 size-6" />
    </span>
  </button>
</div>

<script>
  const toggleDarkMode = document.getElementById("toggleDarkMode");

  toggleDarkMode?.addEventListener("click", () => {
    document.body.classList.toggle("dark");
  });
</script>
